<?xml version="1.0" encoding="UTF-8"?>

<quick-toolkit name="Quick Base" version="0.0.1">
	<description>
		This toolkit defines basic Quick functionality
	</description>
	<dependencies>
		<classpath>classes</classpath>
	</dependencies>
	<style-sheet ref="src/main/styles/base-styles.qss" />
	<types>
		<!-- Widgets -->
        <type tag="block">org.quick.base.widget.Block</type>
        <type tag="image">org.quick.base.widget.Image</type>
        <type tag="button">org.quick.base.widget.Button</type>
        <type tag="toggle-button">org.quick.base.widget.ToggleButton</type>
        <type tag="label">org.quick.base.widget.Label</type>
        <type tag="border">org.quick.base.widget.BorderPane</type>
        <type tag="text-cursor-overlay">org.quick.base.widget.DocumentCursorOverlay</type>
        <type tag="text-field">org.quick.base.widget.TextField</type>
        <type tag="spinner">org.quick.base.widget.Spinner</type>
        <type tag="table">org.quick.base.widget.Table</type>
        <type tag="table-column">org.quick.base.widget.Table</type>
        <type tag="tree">org.quick.base.widget.Tree</type>
        <type tag="table">org.quick.base.widget.Table</type>
        <type tag="table-column">org.quick.base.widget.TableColumn</type>
        
		<!-- Layouts -->
        <type tag="simple">org.quick.core.QuickLayout</type>
        <type tag="flow">org.quick.core.QuickLayout</type>
        <type tag="box">org.quick.core.QuickLayout</type>
        <type tag="border-layout">org.quick.core.QuickLayout</type>
        <type tag="text-edit-layout">org.quick.core.QuickLayout</type>
        
		<!-- Textures -->
        <type tag="raised-round">org.quick.core.style.Texture</type>
        <type tag="raised-square">org.quick.core.style.Texture</type>
        <type tag="border-texture">org.quick.core.style.Texture</type>
        <type tag="grooved">org.quick.coore.style.Texture</type>
        
		<!-- Style Domains -->
        <type tag="btn">org.quick.base.style.ButtonStyle</type>
        <type tag="border-style">org.quick.base.style.BorderStyle</type>
        <type tag="text-edit-style">org.quick.base.style.TextEditStyle</type>

        <!-- Utilities -->
        <type tag="formats">org.quick.base.model.Formats</type>
        <type tag="sound-model">org.quick.base.model.SoundModel$Builder</type>
	</types>
	<resources>
		<resource tag="img-load-icon" />
		<resource tag="img-load-failed-icon" />
		<resource tag="tree-expand-icon" />
		<resource tag="tree-collapse-icon" />
		<resource tag="up-arrow" />
		<resource tag="down-arrow" />
		<resource tag="beep" />
	</resources>
	<security />
</quick-toolkit>
