<?xml version="1.0" encoding="UTF-8"?>

<quick-widget-set name="Quick Core Widgets" version="0.0.1"
	implements="../../../core/QuickCore.xml">
	<description>
		The independent reference implementation for the Quick Core toolkit.  Renders all elements from scratch,
		not drawing on other graphical toolkits except java's Graphics2D.
	</description>
	<dependencies>
		<classpath>classes</classpath>
	</dependencies>
	<widgets>
		<widget element="body">org.quick.widget.core.BodyWidget</widget>
		<!-- The text type is mapped so as to be accessible for styles. The tag should not be used in Quick files. -->
		<widget element="text">org.quick.widget.core.QuickTextWidget</widget>
	</widgets>
	<types>
		<!-- Layouts -->
		<type tag="layer">org.quick.widget.core.layout.LayerLayout</type>
		<!-- Style related types -->
		<type tag="no-texture">org.quick.widget.core.style.BaseTexture</type>
		<type tag="doc-texture">org.quick.widget.core.style.DocumentTexture</type>
	</types>
	<security />
</quick-widget-set>
