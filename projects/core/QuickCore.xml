<?xml version="1.0" encoding="UTF-8"?>

<quick-toolkit name="Quick Core" version="0.0.1">
	<description>
		This required toolkit provides core functionality to run other Quick toolkits
	</description>
	<dependencies />
	<style-sheet ref="../src/main/styles/core-styles.qss" />
	<types>
	    <!-- Element types -->
		<type tag="body">org.quick.core.BodyElement</type>
		<!-- The text type is mapped so as to be accessible for styles. The tag should not be used in Quick files. -->
		<type tag="text">org.quick.core.QuickTextElement</type>
		<!-- Layouts -->
		<type tag="layer">org.quick.core.QuickLayout</type>
		<!-- Style related types -->
		<type tag="bg">org.quick.core.style.BackgroundStyle</type>
		<type tag="font">org.quick.core.style.FontStyle</type>
		<type tag="light">org.quick.core.style.LightedStyle</type>
		<type tag="layout">org.quick.core.style.LayoutStyle</type>
		<type tag="no-texture">org.quick.core.style.Texture</type>
		<type tag="doc-texture">org.quick.core.style.Texture</type>
		<!-- Model types -->
		<type tag="default-model">org.quick.core.model.DefaultQuickModel$Builder</type>
		<type tag="counter-model">org.quick.core.model.CounterModel$Builder</type>
		<!-- Utilities -->
		<type tag="colors">org.quick.core.style.Colors</type>
		<type tag="QuickUtil">org.quick.util.QuickExpressionUtils</type>
	</types>
	<security />
</quick-toolkit>
