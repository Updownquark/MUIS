<?xml version="1.0" encoding="UTF-8"?>

<quick-widget-set name="Quick Base Widgets" version="0.0.1">
	<implements toolkit="Quick Base" version="0.0.1" />
	<description>
		The independent reference implementation for the Quick Base toolkit.  Renders all elements from scratch,
		not drawing on other graphical toolkits except java's Graphics2D.
	</description>
	<dependencies>
		<classpath>classes</classpath>
	</dependencies>
	<types>
		<!-- Widgets -->
        <type tag="block">org.quick.widget.base.BlockWidget</type>
        <type tag="image">org.quick.widget.base.ImageWidget</type>
        <type tag="button">org.quick.widget.base.ButtonWidget</type>
        <type tag="toggle-button">org.quick.widget.base.ToggleButtonWidget</type>
        <type tag="label">org.quick.widget.base.LabelWidget</type>
        <type tag="border">org.quick.widget.base.BorderPaneWidget</type>
        <type tag="text-cursor-overlay">org.quick.widget.base.DocCursorOverlayWidget</type>
        <type tag="text-field">org.quick.widget.base.TextFieldWidget</type>
        <type tag="spinner">org.quick.widget.base.SpinnerWidget</type>
        <type tag="table">org.quick.widget.base.TableWidget</type>
        <type tag="table-column">org.quick.widget.base.TableColumnWidget</type>
        <type tag="tree">org.quick.widget.base.Tree</type>
        
		<!-- Layouts -->
        <type tag="simple">org.quick.widget.base.layout.SimpleLayout</type>
        <!--<type tag="flow">org.quick.base.layout.FlowLayout</type>-->
        <type tag="box">org.quick.widget.base.layout.BoxLayout</type>
        <type tag="border-layout">org.quick.widget.base.layout.BorderLayout</type>
        <type tag="text-edit-layout">org.quick.widget.base.layout.TextEditLayout</type>
        
		<!-- Textures -->
        <type tag="raised-round">org.quick.widget.base.style.RaisedRoundTexture</type>
        <type tag="raised-square">org.quick.widget.base.style.RaisedSquareTexture</type>
        <type tag="border-texture">org.quick.widget.base.style.BorderTexture</type>
        <type tag="grooved">org.quick.widget.base.style.GrooveTexture</type>
	</types>
	<resources>
		<resource tag="img-load-icon">src/main/resources/imageLoading.gif</resource>
		<resource tag="img-load-failed-icon">src/main/resources/imageLoadFailed.png</resource>
		<resource tag="tree-expand-icon">src/main/resources/treeExpandIcon.png</resource>
		<resource tag="tree-collapse-icon">src/main/resources/treeCollapseIcon.png</resource>
		<resource tag="up-arrow">src/main/resources/upArrow.png</resource>
		<resource tag="down-arrow">src/main/resources/downArrow.png</resource>
		<resource tag="beep">src/main/resources/beep.wav</resource>
	</resources>
	<security />
</quick-widget-set>
